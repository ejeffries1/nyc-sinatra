
<h3>Edit for <%=@figure.name%></h3>

<form method="POST" action="/figures/<%=@figure.id%>">
    <input id="hidden" type="hidden" name="_method" value="patch">

    <h2>Edit the Figure Name</h2>
        <input type="text" name="figure[name]" id="figure_name">
        <br>
    <h2>Existing Titles</h2>
        <%Title.all.each do |title|%>
            <input type="checkbox" name="figure[title_ids]" id="<%=title.id%>"><%=title.name%><br>
        <%end%>
        <br>
        <h3>Existing Landmark</h3>
        <%Landmark.all.each do |landmark|%>
            <input type="checkbox" name="figure[landmark_ids]" id="<%=landmark.id%>"><%=landmark.name%><br>
        <%end%>
        <br>
        <h3>Create New Landmark</h3>
        <input type="text" id="new_landmark">
        <br>
        <input type="submit" value="Edit Figure">
</form>